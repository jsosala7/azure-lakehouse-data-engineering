{
	"name": "pl_ingest_raw",
	"properties": {
		"description": "Implementación de un pipeline en Azure Data Factory con Copy Activity para ingesta masiva de archivos CSV almacenados en Azure Data Lake Storage Gen2. El proceso utiliza wildcards para lectura dinámica de múltiples archivos y copia los datos sin transformación hacia la capa RAW, preservando la jerarquía de carpetas.",
		"activities": [
			{
				"name": "cp_lap_times_raw",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"wildcardFolderPath": "landing/lap_times",
							"wildcardFileName": "lap_times_split_*.csv",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "PreserveHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ds_csv_lap_times_raw",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ds_csv_lap_times_ingested",
						"type": "DatasetReference"
					}
				]
			},
